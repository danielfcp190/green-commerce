{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext",
      "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@global-layouts/*": [
        "./layouts/*"
      ],
      "@global-components/*": [
        "./components/*"
      ],
      "@global-utils/*": [
        "./utils/*"
      ],
      "@global-hooks/*": [
        "./hooks/*"
      ],
      "@global-contexts/*": [
        "./contexts/*"
      ],
      "@global-stores/*": [
        "./stores/*"
      ],
      "@global-libs/*": [
        "./libs/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@entities/*": [
        "./entities/*"
      ],
      "@services": [
        "./services"
      ],
      "@styles": [
        "./styles"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@configs/*": [
        "./configs/*"
      ],
      "@home/*": [
        "./modules/home/*"
      ],
      "@cart/*": [
        "./modules/cart/*"
      ],
      "@fertilizers/*": [
        "./modules/fertilizers/*"
      ],
      "@flowers/*": [
        "./modules/flowers/*"
      ],
      "@seeds/*": [
        "./modules/seeds/*"
      ],
      "@plants/*": [
        "./modules/plants/*"
      ],
      "@tools/*": [
        "./modules/toolsModule/*"
      ],
      "@assets/*": [
        "../public/assets/*"
      ],
      "@fonts/*": [
        "../public/fonts/*"
      ]
  }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/api/index.js"],
  "exclude": ["node_modules"]
}

